{
  "devDependencies": {
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1"
  },
  "private": true,
  "name": "vector",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "workspaces": [
    "contracts",
    "app"
  ],
  "command": {
    "publish": {
      "registry": "https://npm.pkg.github.com"
    }
  },
  "scripts": {
    "prepare": "husky install",
    "test": "lerna run test --parallel",
    "build": "lerna run build --parallel",
    "prettier": "lerna run prettier --parallel"
  },
  "resolutions": {
    "@ethereumjs/vm": "5.3.2",
    "@ethereumjs/tx": "3.1.3"
  },
  "lint-staged": {
    "{scripts,test,contracts}/**/*.{js,ts,sol}": [
      "prettier --write"
    ]
  }
}
